<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
    tools:context="iii.com.chumeet.act.ActUpdateActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="700dp">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />



        <Button
            android:id="@+id/btnDone_ActUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:text="Button" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnDone_ActUpdate"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/colorAccent">

            <EditText
                android:id="@+id/edName_ActUpdate"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textInputLayout"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:backgroundTint="@color/colorAccent"
                android:hint="@string/edActNameUpdate" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textInputLayout"
            android:layout_below="@+id/textInputLayout"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/edAdr_ActUpdate"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:hint="@string/edActAdrUpdate" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnStartDate_ActUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textInputLayout3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="@string/tvAct_StartDatePicker"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvStartDate_ActUpdate_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnStartDate_ActUpdate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:textSize="24sp"
            tools:text="textview" />

        <Button
            android:id="@+id/btnEndDate_ActUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvStartDate_ActUpdate_show"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="@string/tvAct_EndDatePicker"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvEndDate_ActUpdate_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignStart="@+id/tvStartDate_ActUpdate_show"
            android:layout_below="@+id/btnEndDate_ActUpdate"
            android:layout_marginTop="16dp"
            android:textSize="24sp"
            android:visibility="visible"
            tools:text="textview" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEndDate_ActUpdate_show"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/etContent_ActUpdate"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/colorAccent"
                android:hint="@string/tvActInsert_content"
                android:inputType="textMultiLine" />

        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textInputLayout4"
            app:cardBackgroundColor="?attr/colorBackgroundFloating"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout_act_insert2">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/act3" />

                <CheckBox
                    android:id="@+id/cbSports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:checkMark="@android:drawable/checkbox_off_background"
                    android:text="@string/ctPoi_1"
                    app:layout_constraintLeft_toRightOf="@+id/imageView"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/cbLearn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:checkMark="@android:drawable/checkbox_off_background"
                    android:text="@string/ctPoi_2"
                    app:layout_constraintLeft_toLeftOf="@+id/cbSports"
                    app:layout_constraintTop_toBottomOf="@+id/cbSports" />

                <CheckBox
                    android:id="@+id/cbFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:checkMark="@android:drawable/checkbox_off_background"
                    android:text="@string/ctPoi_3"
                    app:layout_constraintLeft_toLeftOf="@+id/cbLearn"
                    app:layout_constraintTop_toBottomOf="@+id/cbLearn"
                    android:layout_marginLeft="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="32dp" />

                <CheckBox
                    android:id="@+id/cbArts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkMark="@android:drawable/checkbox_off_background"
                    android:text="@string/ctPoi_4"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/cbPets"
                    app:layout_constraintLeft_toLeftOf="@+id/cbPets" />

                <CheckBox
                    android:id="@+id/cbGame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:checkMark="@android:drawable/checkbox_off_background"
                    android:text="@string/ctPoi_6"
                    app:layout_constraintLeft_toLeftOf="@+id/cbMovie"
                    app:layout_constraintTop_toBottomOf="@+id/cbMovie" />

                <CheckBox
                    android:id="@+id/cbMovie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:checkMark="@android:drawable/checkbox_off_background"
                    android:text="@string/ctPoi_5"
                    app:layout_constraintLeft_toRightOf="@+id/cbSports"
                    app:layout_constraintTop_toTopOf="@+id/cbSports" />

                <CheckBox
                    android:id="@+id/cbPets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:checkMark="@android:drawable/checkbox_off_background"
                    android:text="@string/ctPoi_8"
                    app:layout_constraintLeft_toRightOf="@+id/cbMovie"
                    app:layout_constraintTop_toTopOf="@+id/cbMovie"
                     />

                <CheckBox
                    android:id="@+id/cbOthers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:checkMark="@android:drawable/checkbox_off_background"
                    android:text="@string/ctPoi_9"
                    app:layout_constraintLeft_toLeftOf="@+id/cbArts"
                    app:layout_constraintTop_toBottomOf="@+id/cbArts" />

                <CheckBox
                    android:id="@+id/cbOutdoors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:checkMark="@android:drawable/checkbox_off_background"
                    android:text="@string/ctPoi_7"
                    app:layout_constraintLeft_toLeftOf="@+id/cbGame"
                    app:layout_constraintTop_toBottomOf="@+id/cbGame" />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>



    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>


